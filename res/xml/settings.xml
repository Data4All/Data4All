<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <io.github.data4all.preference.CurrentUserPreference android:title="@string/pref_currentuser_title" />

    <EditTextPreference
        android:defaultValue="@integer/pref_bodyheight_default"
        android:dialogMessage="@string/pref_bodyheight_dialog_message"
        android:dialogTitle="@string/pref_bodyheight_dialog_title"
        android:inputType="number"
        android:key="@string/pref_bodyheight_key"
        android:maxLength="3"
        android:summary="@string/pref_bodyheight_summary"
        android:title="@string/pref_bodyheight_title" />

    <ListPreference
        android:defaultValue="@string/pref_language_default"
        android:entries="@array/languageListArray"
        android:entryValues="@array/languageListValues"
        android:key="@string/pref_language_key"
        android:summary="@string/pref_language_summary"
        android:title="Language" />

</PreferenceScreen>