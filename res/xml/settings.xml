<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <io.github.data4all.preference.CurrentUserPreference android:title="@string/pref_currentuser_title" />

    <EditTextPreference
        android:defaultValue="@integer/pref_bodyheight_default"
        android:dialogMessage="@string/pref_bodyheight_dialog_message"
        android:dialogTitle="@string/pref_bodyheight_dialog_title"
        android:inputType="number"
        android:key="@string/pref_bodyheight_key"
        android:maxLength="3"
        android:summary="@string/pref_bodyheight_summary"
        android:title="@string/pref_bodyheight_title" />
    <EditTextPreference
        android:defaultValue="@integer/pref_pointsize_default"
        android:dialogMessage="@string/pref_pointsize_dialog_message"
        android:dialogTitle="@string/pref_pointsize_dialog_title"
        android:inputType="number"
        android:key="@string/pref_pointsize_key"
        android:maxLength="1"
        android:title="@string/pref_pointsize_title" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="auto_rotate"
        android:title="@string/auto_rotate_title" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="augmented_reality"
        android:summary="@string/pref_augmented_reality_summary"
        android:title="@string/pref_augmented_reality" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="sensor_warning"
        android:title="@string/pref_sensor_warning" />

    <ListPreference
        android:defaultValue="@string/pref_gallery_deletemode_default"
        android:dialogTitle="@string/pref_gallery_deletemode_dialog_title"
        android:entries="@array/pref_gallery_deletemode_option"
        android:entryValues="@array/pref_gallery_deletemode_keys"
        android:key="@string/pref_gallery_deletemode_key"
        android:summary="@string/pref_gallery_deletemode_summary"
        android:title="@string/pref_gallery_deletemode_title" />
    <ListPreference
        android:dialogTitle="@string/pref_moving_animation_dialog_title"
        android:entries="@array/pref_moving_animation_option"
        android:entryValues="@array/pref_moving_animation_keys"
        android:key="@string/pref_moving_animation_key"
        android:summary="@string/pref_moving_animation_summary"
        android:title="@string/pref_moving_animation_title" />

</PreferenceScreen>