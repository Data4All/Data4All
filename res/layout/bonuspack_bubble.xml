<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bonuspack_bubble"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/bubble_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bubble_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:maxEms="17"
                android:text="Title"
                android:textColor="#000000" />

            <Button
                android:id="@+id/bubble_moreinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:background="@drawable/btn_moreinfo"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/bubble_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="17"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/bubble_subdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="17"
            android:text="Address"
            android:textColor="#000000"
            android:textSize="10dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bubble_delete"
                style="@style/DefaultButtonText"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/register_button_bg"
                android:paddingLeft="5dp"
                android:text="@string/delete"
                android:textColor="#660000"
                android:textSize="12dp" />

            <Button
                android:id="@+id/bubble_edit"
                style="@style/DefaultButtonText"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@+id/bubble_delete"
                android:background="@drawable/register_button_bg"
                android:text="@string/edit"
                android:textColor="#000000"
                android:textSize="12dp"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>