<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <io.github.data4all.view.D4AMapView
        android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/noDescription" />

    <io.github.data4all.widged.CustomImageButton
        android:id="@+id/return_to_actual_Position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:contentDescription="@string/noDescription"
        android:padding="0dp"
        android:src="@drawable/ic_point" />

    <io.github.data4all.widged.CustomImageButton
        android:id="@+id/switch_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:contentDescription="@string/noDescription"
        android:padding="0dp"
        android:src="@drawable/ic_sat" />

    <io.github.data4all.widged.CustomImageButton
        android:id="@+id/rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:contentDescription="@string/noDescription"
        android:padding="0dp"
        android:src="@drawable/ic_angle" />

    <io.github.data4all.widged.CustomImageButton
        android:id="@+id/okay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:contentDescription="@string/noDescription"
        android:onClick="onClickOkay"
        android:src="@drawable/ic_ok" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/noDescription"
        android:scaleType="fitXY"
        android:src="@drawable/data4allport"
        android:visibility="gone" 
        />

    <ZoomControls
        android:id="@+id/zoomcontrols"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/okay"
        android:layout_centerHorizontal="true" 
        />

</RelativeLayout>