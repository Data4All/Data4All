<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/android"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        style="@style/imageViewTakedPicture"
        android:contentDescription="@string/returnToActualPosition" />

    <io.github.data4all.view.TouchView
        android:id="@+id/touchView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <ImageButton
            android:id="@+id/imageButton3"
            style="@style/imageButtonDrawWay"
            android:onClick="onClickPath"
        	android:contentDescription="@string/drawWay" />
      

        <ImageButton
            android:id="@+id/imageButton1"
            style="@style/imageButtonDrawPoint"
            android:onClick="onClickPoint"
        	android:contentDescription="@string/drawPoint" />            

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickBuilding"
            android:text="Gebäude" />

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickArea"
            android:text="Fläche" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton2"
        style="@style/imageButtonOkay"
        android:onClick="onClickOkay"
        android:contentDescription="@string/noDescription" />
    
    <Button
        android:id="@+id/redobtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/undobtn"
        android:onClick="onClickRedo"
        android:enabled="false"
        android:text="Redo" />

    <Button
        android:id="@+id/undobtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="onClickUndo"
        android:enabled="false"
        android:text="Undo" />

</RelativeLayout>
