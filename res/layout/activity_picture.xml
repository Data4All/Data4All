<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        style="@style/imageViewTakedPicture"
        android:contentDescription="@string/returnToActualPosition" />

    <io.github.data4all.view.CaptureAssistView
        android:id="@+id/cameraAssistView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

    <io.github.data4all.view.TouchView
        android:id="@+id/touchView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:id="@+id/layout_choose_interpreter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <io.github.data4all.widged.CustomImageButton
            android:id="@+id/imageButton1"
            style="@style/imageButtonDrawPoint"
            android:contentDescription="@string/drawPoint"
            android:onClick="onClickPoint" />

        <io.github.data4all.widged.CustomImageButton
            android:id="@+id/imageButton2"
            style="@style/imageButtonDrawWay"
            android:contentDescription="@string/drawWay"
            android:onClick="onClickPath" />

        <io.github.data4all.widged.CustomImageButton
            android:id="@+id/imageButton3"
            style="@style/imageButtonDrawArea"
            android:contentDescription="@string/drawArea"
            android:onClick="onClickArea" />

        <io.github.data4all.widged.CustomImageButton
            android:id="@+id/imageButton4"
            style="@style/imageButtonDrawBuilding"
            android:contentDescription="@string/drawBuilding"
            android:onClick="onClickBuilding" />
    </LinearLayout>

    <io.github.data4all.widged.CustomImageButton
        android:id="@+id/okbtn"
        style="@style/imageButtonOkay"
        android:contentDescription="@string/noDescription"
        android:onClick="onClickOkay" />

    <io.github.data4all.widged.CustomImageButton
        android:id="@+id/redobtn"
        style="@style/imageButtonRedoPictureActivity"
        android:contentDescription="@string/redo"
        android:onClick="onClickRedo" />

    <io.github.data4all.widged.CustomImageButton
        android:id="@+id/undobtn"
        style="@style/imageButtonUndoPictureActivity"
        android:contentDescription="@string/undo"
        android:onClick="onClickUndo" />

    <io.github.data4all.widged.CustomImageButton
        android:id="@+id/customImageButton1"
        style="@style/imageButtonAway"
        android:onClick="onClickAway" />

</RelativeLayout>